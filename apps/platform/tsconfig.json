{
  "extends": "@repo/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@public": ["./public"]
    }
  },
  "include": [
    "next-env.d.ts",
    "react-app-env.d.ts",
    ".",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

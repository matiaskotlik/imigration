{
  "name": "imigration",
  "private": true,
  "scripts": {
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "format": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "format:check": "turbo run format --continue -- --check --cache --cache-location .cache/.prettiercache",
    "postinstall": "sherif",
    "lint": "pnpm with-env turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:check": "pnpm with-env turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:ws": "sherif --fix",
    "platform:dev": "pnpm with-env turbo watch dev -F @repo/platform...",
    "typecheck": "pnpm with-env turbo run typecheck",
    "with-env": "dotenvx run --convention nextjs --"
  },
  "prettier": "@repo/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@commitlint/types": "latest",
    "@repo/prettier-config": "workspace:*",
    "@turbo/gen": "^2.5.4",
    "conventional-changelog-conventionalcommits": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.1",
    "prettier": "catalog:",
    "sherif": "latest",
    "turbo": "^2.5.4",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.11.1"
  }
}
